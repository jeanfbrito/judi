<div class="well" style="padding: 8px 0; background: white; padding: 10px;">
  <h1>
    Projects
  </h1>

  <a href="#newDocument" data-url="<%= new_document_path(:user_id => current_user.id)%>" data-toggle="modal" class="new-document-button"><i class="icon-plus"></i> New document</a>

  <ul class="tasks zebra-list">
    <% if @document.count > 0 %>
      <% @document.each do |document| %>
      <li>
        <input type="checkbox"> 
        <span class="title"><%= link_to document.title, document %> 
        </span> 
        <span class="meta">Created <em><%=time_ago_in_words(document.created_at)%></em> ago by <em><%=document.user.name%></em></span>
      </li>
      <% end %>
    <% end %>
  </ul>
</div>

<!-- Modal -->
<div id="newDocument" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3>New Document</h3>
  </div>
  <div class="modal-body">
    Carregando...
  </div>
</div>