<div id="subtasks" style="padding-top: 8px">
  <table class="table table-striped table-condensed table-bordered">
    <tbody>
      <% @project.tasks.roots.order("priority asc").each do |subtask| %>
      <tr data-contact="<%= subtask.id %>" href-contact="<%= details_task_path(subtask) %>">
        <td class="tasks-prio prio<%= subtask.priority.value %>"></td>
        <td class=""></td>
        <td class="">
          <input type="checkbox">
        </td>
        <td>
          <span class="title"><%= link_to subtask.title, subtask %></span> 
          <span class="meta">Created <em><%=time_ago_in_words(subtask.created_at)%></em> ago by <em><%=subtask.project.user.name%></em></span>
        </td> 
        <td class="">Apr 28</td>
        <td class=""></td></tr>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
